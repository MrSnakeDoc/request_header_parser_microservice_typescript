{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "",
    "paths": {
      "*": ["node_modules/*"]
    },
    "rootDir": "src",
    "declaration": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"]
}
